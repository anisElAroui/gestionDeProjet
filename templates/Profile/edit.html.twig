{% extends 'base.html.twig' %}

{% block main_content %}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h3 class="heading">User Profile</h3>
        {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}

            <fieldset>
                <div class="form-group">
                    <label class="control-label col-sm-2">Username</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <strong>{{ user.username }}</strong>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fileinput" class="control-label col-sm-2">User avatar</label>
                    <div class="col-sm-8">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="width: 80px; height: 80px;"><img src="http://www.placehold.it/80x80/EFEFEF/AAAAAA" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="width: 80px; height: 80px;"></div>
                            {{ form_widget((edit_form.image)) }}
                            <a href="#" class="btn btn-link fileupload-exists" data-dismiss="fileupload">Remove</a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="u_fname" class="control-label col-sm-2">Full name</label>
                    <div class="col-sm-8">
                        {{ form_widget(edit_form.fullname,  {'attr': {'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="u_email" class="control-label col-sm-2">Email</label>
                    <div class="col-sm-8">
                        <input id="u_email" class="input-xlarge form-control" value="{{ user.email }}" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">I want to receive:</label>
                    <div class="col-sm-8">
                        <label class="checkbox-inline">
                            <input value="newsletter" id="email_newsletter" name="email_receive" type="checkbox">
                            Newsletters
                        </label>
                        <label class="checkbox-inline">
                            <input value="sys_messages" id="email_sysmessages" name="email_receive" checked="checked" type="checkbox">
                            System messages
                        </label>
                        <label class="checkbox-inline">
                            <input value="other_messages" id="email_othermessages" name="email_receive" type="checkbox">
                            Other messages
                        </label>
                    </div>
                </div>
                {#<div class="form-group">#}
                    {#<label class="control-label col-sm-2">Language(s)</label>#}
                    {#<div class="col-sm-8">#}
                        {#<select name="user_languages" id="user_languages" multiple="" data-placeholder="Choose a language(s)..." class="form-control">#}
                            {#<option selected="selected">English</option>#}
                            {#<option>French</option>#}
                            {#<option>German</option>#}
                            {#<option>Italian</option>#}
                            {#<option>Chinese</option>#}
                            {#<option>Spanish</option>#}
                        {#</select>#}
                    {#</div>#}
                {#</div>#}
                <div class="form-group">
                    <label class="control-label col-sm-2">Gender</label>
                    <div class="col-sm-8">
                        <label class="radio-inline">
                            {{ form_widget((edit_form.male)) }}
                            Male
                        </label>
                        <label class="radio-inline">
                            {{ form_widget((edit_form.female)) }}
                            Female
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="u_signature" class="control-label col-sm-2">Signature</label>
                    <div class="col-sm-8">
                        {{ form_widget(edit_form.signature,  {'attr': {'class':'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button class="btn btn-default" type="submit">Save changes</button>
                        <a class="btn btn-link" href="{{ path('profile_show') }}">Cancel</a>
                    </div>
                </div>
            </fieldset>
        {{ form_end(edit_form) }}
    </div>
</div>

{% endblock %}