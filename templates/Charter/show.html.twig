{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="tac col-lg-12">
                            <h1>{{ charter.title }}</h1><br>
                            <a class="btn btn-primary " href="{{ path('charter_edit', { 'id': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit charter</a>
                        </div>
                    </div>

                    <h2 class="heading">Project and Product Overview</h2><br>

                    <div class="row">
                        <div class="col-sm-6 col-md-6">

                    <h3> 1- Project Identification</h3>

                            <p><strong class="text-muted">Project Name :</strong> {{ charter.projectName }}</p>
                            <p><strong class="text-muted">Project Manager:</strong> {{ charter.projectManager }}</p>
                            <p><strong class="text-muted">Project Internal References :</strong> {{ charter.projectInternalRefrances }}</p>
                            <p><strong class="text-muted">Final Client :</strong> {{ charter.finalClient }}</p>
                            <p><strong class="text-muted">Client :</strong> {{ charter.client }}</p>
                        </div>
                        <div class="col-sm-6 col-md-6">

                        <h3> 2- Project Description</h3> <p>{{ charter.projectDescription }}</p>

                    <h3> 3- Project repository</h3> <p>{{ charter.projectRepository }}</p><br>
                        </div>
                    </div>
                    <ul class="pager">
                        <li class="next">
                            <a href="{{ path('charter_show2', {'id': charter.id}) }}">Next <i class="glyphicon glyphicon-chevron-right"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}
