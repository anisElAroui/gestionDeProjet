{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">

                    <div class="row">
                        <div class="tac col-lg-12">
                            <h1>{{ charter.title }}</h1><br>

                            <a class="btn btn-primary " href="{{ path('charter_edit', { 'id': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i>{% trans %} edit charter {% endtrans %}</a>
                        </div>
                    </div>
                    {% trans %} <h2 class="heading">Project scope</h2> {% endtrans %}<br>

                    {% trans %} <h3>1- Objectives</h3> {% endtrans %} <p>{{ charter.objectives }}</p>

                    {% trans %} <h3>2- High Level Requirements</h3> {% endtrans %}
                    <div class="row">
                        <div class="tac col-lg-4">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th> {% trans %}High Level Requirements{% endtrans %} </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for requirement in charter.requirements %}
                            <tr>
                                <td>{{ requirement.highLevelRequirement }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                        </div>
                    </div>
                    {% trans %}<h3>3- Major Deliverables</h3>{% endtrans %}

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th> {% trans %}Major Deliverables {% endtrans %} </th>
                                <th> {% trans %}Deliverables Description {% endtrans %} </th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for deliverable in charter.deliverables %}
                                <tr>
                                    <td>{{ deliverable.majorDeliverables }}</td>
                                    <td>{{ deliverable.deliverablesDescription }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <ul class="pager">
                        <li class="previous">
                            <a href="{{ path('charter_show', {'id': charter.id}) }}"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'Previous'|trans|raw }}</a>
                        </li>
                        <li class="next">
                            <a href="{{ path('charter_show3', {'id': charter.id}) }}">{{ 'Next'|trans|raw }} <i class="glyphicon glyphicon-chevron-right"></i></a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}