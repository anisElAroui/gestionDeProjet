{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                <h1>Finance edit</h1>

                {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}

                {{ form_widget(edit_form._token) }}
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">budget</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.budget,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.budget) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">sellingPrice</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.sellingPrice,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.sellingPrice) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">Deadline</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.Deadline,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(edit_form.Deadline) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">expensesPlanned</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.expensesPlanned,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.expensesPlanned) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">Current expenses</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.currentExpenses,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.currentExpenses) }}
                        </div>
                    </div>

                    <div  class="form-group">
                     <label class="col-sm-6 control-label"></label>
                        <div class="col-sm-4" >
			<button class="btn btn-primary" type="submit"> Edit</button>
                        </div>
                    </div>
                {{ form_end(edit_form) }}
                 <br>
  
                <a class="btn btn-warning" href="{{ path('finance_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>



                </div>
            </div>
        </div>
     </div>
           
{% endblock %}
