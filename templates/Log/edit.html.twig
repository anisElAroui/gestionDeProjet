{% extends 'base.html.twig' %}

{% block main_content %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                <h1>Log edit</h1>

                {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}

                {{ form_widget(edit_form._token) }}
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" ><span class="label label-primary">date</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.date,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.date) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" ><span class="label label-primary">note</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.note,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.note) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" ><span class="label label-primary">description</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.description,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.description) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" ><span class="label label-primary">author</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.author,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.author) }}
                        </div>
                    </div>

                    <div  class="form-group">
                     <label class="col-sm-6 control-label"></label>
                        <div class="col-sm-4" >
			<button class="btn btn-primary" type="submit"> Edit</button>
                        </div>
                    </div>
                {{ form_end(edit_form) }}
                 <br>
  
                <a class="btn btn-warning" href="{{ path('log_index',{'id':charter.id}) }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>



                </div>
            </div>
        </div>
     </div>
           
{% endblock %}
