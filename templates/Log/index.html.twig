{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>log</h1>

                    <div class="table-responsive">
                        {% if logs is defined and logs is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  date</th>
                                    <th>  note </th>
                                    <th>  description</th>
                                    <th>  author</th>
                                    <th>  Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for log in logs %}
                                    {% if log.charter.id is defined and log.charter.id == charter.id %}
                                    <tr>
                                        <td><a href="{{ path('log_show', { 'id2': log.id,'id1': charter.id  }) }}">{{ log.id }}</a></td>
                                        <td>{{ log.date | date('Y-m-d')}}</td>
                                        <td>{{ log.note }}</td>
                                        <td>{{ log.description }}</td>
                                        <td>{{ log.author}}</td>
                                        

                                        <td>
                                            <a class="btn btn-info" href="{{ path('log_show', {  'id2': log.id,'id1': charter.id  }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('log_edit', {  'id2': log.id,'id1': charter.id  }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('log_new',{ 'id':charter.id}) }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}