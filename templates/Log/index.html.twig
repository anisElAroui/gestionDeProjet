{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Log</h1>

                    <div class="table-responsive">
                        {% if logs is defined and logs is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  date</th>
                                    <th>  note </th>
                                    <th>  description</th>
                                    <th>  author</th>
                                    <th>  Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for Log in logs %}
                                    <tr>
                                        <td><a href="{{ path('log_show', { 'id': Log.id }) }}">{{ Log.id }}</a></td>
                                        <td>{{ Log.date | date('Y-m-d')}}</td>
                                        <td>{{ Log.note }}</td>
                                        <td>{{ Log.description }}</td>
                                        <td>{{ Log.author}}</td>
                                        

                                        <td>
                                            <a class="btn btn-info" href="{{ path('log_show', { 'id': Log.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('log_edit', { 'id': Log.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('log_new') }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}