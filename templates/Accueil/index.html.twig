{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Project list</h1>

                    <br>
                    <a class="btn btn-success " href="{{ path('add_new_project') }}"><i class="glyphicon glyphicon-plus"></i> Add a new project</a>
                    <br><br>

                    <div class="table-responsive">
                        {% if charters is defined and charters is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  projectName</th>
                                    <th>  projectManager </th>
                                    <th>  year</th>
                                    <th>  realStartDate</th>
                                    <th>  plannedEndDate</th>
                                    <th>  budget</th>
                                    <th>  incomes</th>
                                    <th>  Expenses</th>
                                    <th>  done</th>
                                    <th>  endDate</th>
                                    <th> Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for charter in charters %}
                                    <tr>
                                        <td><a href="{{ path('charter_show', { 'id': charter.id }) }}">{{ charter.id }}</a></td>
                                        <td>{{ charter.projectName }}</td>
                                        <td>{{ charter.projectManager }}</td>
                                        {#<td>{{ charter.year }}</td>#}
                                        <td></td>
                                        {#<td>{{ charter.realStartDate |date('Y-m-d')}}</td>#}
                                        <td></td>
                                        {#<td>{{ charter.plannedEndDate |date('Y-m-d')}}</td>#}
                                        <td></td>
                                        <td>{{ charter.budget }}</td>
                                        {#<td>{{ charter.incomes }}</td>#}
                                        <td></td>
                                        <td>{{ charter.plannedExpensesBudget }}</td>
                                        {#<td>{{ charter.done }}</td>#}
                                        <td></td>
                                        {#<td>{{ charter.endDate |date('Y-m-d') }}</td>#}
                                        <td></td>

                                        <td>
                                            <a class="btn btn-info" href="{{ path('project_show', { 'id': charter.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('project_edit', { 'id': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>


                </div>
            </div>
        </div>
    </div>

{% endblock %}
