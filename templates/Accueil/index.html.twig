{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Project list</h1>

                    <a class="btn btn-success " href="{{ path('add_new_project') }}"><i class="glyphicon glyphicon-plus"></i> Add a new project</a>
                    <br>

                    <div class="table-responsive">
                        {% if projects is defined and projects is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  projectName</th>
                                    <th>  projectManager </th>
                                    <th>  year</th>
                                    <th>  realStartDate</th>
                                    <th>  plannedEndDate</th>
                                    <th>  budget</th>
                                    <th>  incomes</th>
                                    <th>  Expenses</th>
                                    <th>  done</th>
                                    <th>  endDate</th>
                                    <th> Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for project in projects %}
                                    <tr>
                                        <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                                        <td>{{ project.projectName }}</td>
                                        <td>{{ project.projectManager }}</td>
                                        <td>{{ project.year |date('Y-m-d')}}</td>
                                        <td>{{ project.realStartDate |date('Y-m-d')}}</td>
                                        <td>{{ project.plannedEndDate |date('Y-m-d')}}</td>
                                        <td>{{ project.budget }}</td>
                                        <td>{{ project.incomes }}</td>
                                        <td>{{ project.Expenses }}</td>
                                        <td>{{ project.done }}</td>
                                        <td>{{ project.endDate |date('Y-m-d') }}</td>


                                        <td>
                                            <a class="btn btn-info" href="{{ path('project_show', { 'id': project.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('project_edit', { 'id': project.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('project_new') }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}