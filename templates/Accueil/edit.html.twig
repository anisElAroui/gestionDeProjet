{% extends 'base.html.twig' %}

{% block main_content %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    {% trans %} <h1>Project edit</h1> {% endtrans %}

                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}
                    {{ form_widget(edit_form._token) }}


                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">expenses</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.expenses,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.expenses) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">real start date</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.realStartDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(edit_form.realStartDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">planned end date</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.plannedEndDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(edit_form.plannedEndDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">done</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.done,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(edit_form.done) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">end date</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(edit_form.endDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(edit_form.endDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                     <label class="col-sm-6 control-label"></label>
                        <div class="col-sm-4" >
			                <button class="btn btn-primary" type="submit">{{ 'Edit'|trans|raw }}</button>
                        </div>
                    </div>

                {{ form_end(edit_form) }}
                 <br>
  
                <a class="btn btn-warning" href="{{ path('project_index') }}"><i class="glyphicon glyphicon-arrow-left"></i>{{ 'Back to the list'|trans|raw }}</a>

                </div>
            </div>
        </div>
    </div>
           
{% endblock %}
