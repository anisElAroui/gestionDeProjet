{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                  <h1>Project</h1>

    <div class="table-responsive">
    <table class="table">
        <tbody>
            <tr>
                <th>projectName</th>
                <td>{{ project.projectName }}</td>
            </tr>
            <tr>
                <th>projectManager</th>
                <td>{{ project.projectManager }}</td>
            </tr>
            <tr>
                <th>year</th>
                <td>{{ project.year|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>realStartDate</th>
                <td>{{ project.realStartDate |date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>plannedEndDate</th>
                <td>{{ project.plannedEndDate |date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>budget</th>
                <td>{{ project.budget }}</td>
            </tr>
            <tr>
                <th>incomes</th>
                <td>{{ project.incomes }}</td>
            </tr>
            <tr>
                <th>Expenses</th>
                <td>{{ project.Expenses }}</td>
            </tr>
            <tr>
                <th>done</th>
                <td>{{ project.done }}</td>
            </tr>
            <tr>
                <th>endDate</th>
                <td>{{ project.endDate|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>           

    </div>
            
            <br>
            <a class="btn btn-primary" href="{{ path('project_edit', { 'id': project.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>
            <a class="btn btn-warning" href="{{ path('project_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
            <br><br>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                 </div>
            </div>
        </div>
    </div>
            
{% endblock %}
