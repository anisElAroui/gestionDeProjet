{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Risks list</h1>

                    <div class="table-responsive">
                        {% if risks is defined and risks is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  description</th>
                                    <th>  mainCause </th>
                                    <th>  impact</th>
                                    <th>  probability </th>
                                    <th>  detection  </th>
                                    <th>  Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for risk in risks %}
                                    {% if risk.charter.id is defined and risk.charter.id == charter.id %}
                                    <tr>
                                        <td><a href="{{ path('risks_show', {'id2': risk.id,'id1': charter.id  }) }}">{{ risk.id }}</a></td>
                                        <td>{{ risk.description }}</td>
                                        <td>{{ risk.mainCause }}</td>
                                        <td>{{ risk.impact }}</td>
                                        <td>{{ risk.probability}}</td>
                                        <td>{{ risk.detection}}</td>

                                        <td>
                                            <a class="btn btn-info" href="{{ path('risks_show', { 'id2': risk.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('risks_edit', { 'id2': risk.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('risks_new',{ 'id':charter.id}) }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}