{% extends 'base.html.twig' %}

{% block main_content %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Risk edit</h1>

                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}

                    {{ form_widget(edit_form._token) }}
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">description</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.description,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.description) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">mainCause</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.mainCause,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.mainCause) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">impact</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.impact,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.impact) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">probability</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.probability,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.probability) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">detection</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.detection,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.detection) }}
                            </div>
                        </div>

                        <div  class="form-group">
                         <label class="col-sm-6 control-label"></label>
                            <div class="col-sm-4" >
                                <button class="btn btn-primary" type="submit"> Edit</button>
                            </div>
                        </div>
                    {{ form_end(edit_form) }}
                     <br>

                    <a class="btn btn-warning" href="{{ path('risks_index',{ 'id': charter.id }) }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
     </div>
           
{% endblock %}