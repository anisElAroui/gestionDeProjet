{% extends 'base.html.twig' %}

{% block breadCrumb %}
    {% include 'breadCrumb.html.twig' %}
{% endblock %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1 class="heading">Charts</h1>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div id="div_piechart"></div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div id="div_pie"></div>
                        </div>
                    </div>
                    <div id="div_col"></div>
                    <div id="div_columnChart"></div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {{ gc_draw([piechart,pie, col,column], ['div_piechart','div_pie', 'div_col','div_columnChart']) }}
    </script>
{% endblock %}