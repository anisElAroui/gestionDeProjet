{% extends 'base.html.twig' %}

{% block breadCrumb %}
    {% include 'breadCrumb.html.twig' %}
{% endblock %}

{% block main_content %}

    <div id="maincontainer" class="clearfix">
        <div id="contentwrapper">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4">
                        <h3 class="heading">Donut chart</h3>
                        <div id="fl_a" style="height:220px;width:80%;margin:40px auto 10px">
                        </div>
                        <div class="clearfix chart_colors">
                            <label class="radio-inline"><input value="ch_blue" name="ch_color" id="chC_blue" type="radio">Blue</label>
                            <label class="radio-inline"><input value="ch_green" name="ch_color" id="chC_green" type="radio">Green</label>
                            <label class="radio-inline"><input value="ch_brown" name="ch_color" id="chC_brown" checked="checked" type="radio">Brown</label>
                        </div>
                    </div>
                    <div class="col-sm-8 col-md-8">
                        <h3 class="heading">Multiple axes chart with multihighlight</h3>
                        <div id="fl_b" style="height:270px;width:90%;margin:15px auto 0"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-md-6">
                        <h3 class="heading">Ordered bars chart</h3>
                        <div id="fl_c" style="height:270px;width:90%;margin:15px auto 0"></div>
                    </div>
                    <div class="col-sm-6 col-md-6">
                        <h3 class="heading">Combined chart</h3>
                        <div id="fl_d" style="height:270px;width:90%;margin:15px auto 0"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <h3 class="heading">Pyramid chart</h3>
                        <div id="fl_e" style="height:480px;width:90%;margin:15px auto 0"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('lib/flot/jquery.flot.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.resize.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.pie.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.curvedLines.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.orderBars.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.multihighlight.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.pyramid.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.time.min.js') }}"></script>
    <script src="{{ asset('lib/flot/jquery.flot.crosshair.min.js') }}"></script>
    <script src="{{ asset('lib/flot.tooltip/jquery.flot.tooltip.min.js') }}"></script>
    <script src="{{ asset('lib/moment/moment.min.js') }}"></script>
    <!-- charts functions -->
    <script src="{{ asset('js/pages/gebo_charts.js') }}"></script>
{% endblock %}