{% extends 'base.html.twig' %}

{% block main_content %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                <h1>Action creation</h1>
            
                {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
                {{ form_widget(form._token) }}
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">actionType</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.actionType,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(form.actionType) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">priority</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.priority,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(form.priority) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">initialDate</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.initialDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(form.initialDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">Author</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.author,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(form.author) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">status</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.status,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(form.status) }}
                        </div>
                    </div>
                    
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">currentDate</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.currentDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(form.currentDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">realDate</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.realDate,  {'attr': {'required':'required'} }) }}
                            {{ form_errors(form.realDate) }}
                        </div>
                    </div>
                    <div  class="form-group">
                        <label class="col-sm-3 control-label" style="font-size:1em"><span class="label label-primary">identificator</span></label>
                        <div class="col-sm-7">
                            {{ form_widget(form.identificator,  {'attr': {'required':'required','class':'form-control'} }) }}
                            {{ form_errors(form.identificator) }}
                        </div>
                    </div>

                    <div  class="form-group">
                    <label class="col-sm-6 control-label"></label>
                        <div class="col-sm-4" >
                            <button class="btn btn-primary" type="submit">Create</button>
                        </div>
                    </div>
                {{ form_end(form) }}

   
                     <a class="btn btn-warning" href="{{ path('action_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
 
                </div>
            </div>
        </div>
    </div>
                     
{% endblock %}
