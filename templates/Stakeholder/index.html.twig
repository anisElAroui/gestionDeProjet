{% extends 'project.html.twig' %}

{% block main_content %}

    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Stakeholder list</h1>

                    <div class="table-responsive">
                        {% if stakeholders is defined and stakeholders is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  name</th>
                                    <th>  role </th>
                                    <th>  email</th>
                                    <th>  phoneNumber</th>
                                    <th> Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for stakeholder in stakeholders %}
                                    <tr>
                                        <td><a href="{{ path('stakeholder_show', { 'id': stakeholder.id }) }}">{{ stakeholder.id }}</a></td>
                                        <td>{{ stakeholder.name }}</td>
                                        <td>{{ stakeholder.role }}</td>
                                        <td>{{ stakeholder.email }}</td>
                                        <td>{{ stakeholder.phoneNumber}}</td>
                                        

                                        <td>
                                            <a class="btn btn-info" href="{{ path('stakeholder_show', { 'id': stakeholder.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('stakeholder_edit', { 'id': stakeholder.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('stakeholder_new') }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}