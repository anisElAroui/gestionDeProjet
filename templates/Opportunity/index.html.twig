{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Opportunities list</h1>

                    <div class="table-responsive">
                        {% if opportunities is defined and opportunities is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  description</th>
                                    <th>  mainCause </th>
                                    <th>  impact</th>
                                    <th>  probability </th>
                                    <th>  detection  </th>
                                    <th>  Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for opportunity in opportunities %}
                                    {% if opportunity.charter.id is defined and opportunity.charter.id == charter.id %}
                                    <tr>
                                        <td><a href="{{ path('opportunities_show', {'id2': opportunity.id,'id1': charter.id  }) }}">{{ opportunity.id }}</a></td>
                                        <td>{{ opportunity.description }}</td>
                                        <td>{{ opportunity.mainCause }}</td>
                                        <td>{{ opportunity.impact }}</td>
                                        <td>{{ opportunity.probability}}</td>
                                        <td>{{ opportunity.detection}}</td>

                                        <td>
                                            <a class="btn btn-info" href="{{ path('opportunities_show', { 'id2': opportunity.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('opportunities_edit', { 'id2': opportunity.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>

                    <br>
                    <a class="btn btn-success" href="{{ path('opportunities_new',{ 'id':charter.id}) }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}