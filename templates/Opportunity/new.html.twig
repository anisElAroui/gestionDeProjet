{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Opportunity creation</h1>

                    {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
                    {{ form_widget(form._token) }}

                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">description</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(form.description,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">mainCause</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(form.mainCause,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(form.mainCause) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">impact</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(form.impact,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(form.impact) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">probability</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(form.probability,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(form.probability) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">detection</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(form.detection,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(form.detection) }}
                            </div>
                        </div>

                        <div  class="form-group">
                        <label class="col-sm-6 control-label"></label>
                            <div class="col-sm-4" >
                                <button class="btn btn-primary" type="submit">Create</button>
                            </div>
                        </div>

                    {{ form_end(form) }}

                    <a class="btn btn-warning" href="{{ path('opportunities_index',{ 'id': charter.id }) }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}