{% extends 'base.html.twig' %}

{% block main_content %}
    
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Report edit</h1>

                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal' }}) }}
                    {{ form_widget(edit_form._token) }}

                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">conclusion</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.conclusion,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.conclusion) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">lesson</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.lesson,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.lesson) }}
                            </div>
                        </div>
                        <div  class="form-group">
                            <label class="col-sm-3 control-label" ><span class="label label-primary">assets</span></label>
                            <div class="col-sm-7">
                                {{ form_widget(edit_form.assets,  {'attr': {'required':'required','class':'form-control'} }) }}
                                {{ form_errors(edit_form.assets) }}
                            </div>
                        </div>
                        <div  class="form-group">
                         <label class="col-sm-6 control-label"></label>
                            <div class="col-sm-4" >
                                <button class="btn btn-primary" type="submit"> Edit</button>
                            </div>
                        </div>
                    {{ form_end(edit_form) }}
                    <br>

                    <a class="btn btn-warning" href="{{ path('report_index',{ 'id': charter.id }) }}"><i class="glyphicon glyphicon-arrow-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
     </div>
           
{% endblock %}