{% extends 'base.html.twig' %}

{% block main_content %}

    <div class="main_content">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <h1>Report</h1>

                    <a class="btn btn-success" href="{{ path('report_new',{ 'id':charter.id}) }}"><i class="glyphicon glyphicon-plus"></i> Create a new entry</a><br><br>

                    <div class="table-responsive">
                        {% if reports is defined and reports is not null  %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>  Id </th>
                                    <th>  conclusion</th>
                                    <th>  lesson </th>
                                    <th>  assets</th>
                                    <th>  Actions </th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for report in reports %}
                                    {% if report.charter.id is defined and report.charter.id == charter.id %}
                                    <tr>
                                        <td><a href="{{ path('report_show', {'id2': report.id,'id1': charter.id }) }}">{{ report.id }}</a></td>
                                        <td>{{ report.conclusion }}</td>
                                        <td>{{ report.lesson }}</td>
                                        <td>{{ report.assets }}</td>

                                        <td>
                                            <a class="btn btn-info" href="{{ path('report_show', {'id2': report.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-eye-open"></i> show</a>
                                            <a class="btn btn-primary" href="{{ path('report_edit', { 'id2': report.id,'id1': charter.id }) }}"><i class="glyphicon glyphicon-edit"></i> edit</a>

                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {%endif%}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}